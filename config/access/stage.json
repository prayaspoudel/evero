{
  "app": {
    "name": "Evero SSO Access Service"
  },
  "web": {
    "port": 8080,
    "prefork": true
  },
  "database": {
    "host": "staging-db-host",
    "port": 5432,
    "username": "postgres",
    "password": "change-me-in-staging",
    "name": "evero_sso_stage_db",
    "pool": {
      "idle": 15,
      "max": 150,
      "lifetime": 450
    }
  },
  "jwt": {
    "access_secret": "staging-access-secret-key",
    "refresh_secret": "staging-refresh-secret-key",
    "access_expiry": "15m",
    "refresh_expiry": "168h",
    "issuer": "evero-sso-service"
  },
  "kafka": {
    "bootstrap.servers": "kafka-staging:9092",
    "producer.enabled": true,
    "group.id": "access-service"
  },
  "log": {
    "level": "info"
  },
  "oauth": {
    "auth_code_expiry": "10m"
  },
  "email": {
    "smtp_host": "smtp.sendgrid.net",
    "smtp_port": 587,
    "smtp_user": "",
    "smtp_password": "",
    "smtp_from": "noreply@staging.evero.com"
  },
  "server": {
    "allowed_origins": [
      "https://staging.evero.com",
      "https://staging-dashboard.evero.com",
      "http://localhost:3000"
    ],
    "environment": "staging"
  }
}
